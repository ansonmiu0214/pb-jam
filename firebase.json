{
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ],
    "env": [
      {
        "hosting": {
          "VITE_FIREBASE_API_KEY": "PLACEHOLDER",
          "VITE_FIREBASE_AUTH_DOMAIN": "pb-jam-project.firebaseapp.com",
          "VITE_FIREBASE_PROJECT_ID": "pb-jam",
          "VITE_FIREBASE_STORAGE_BUCKET": "pb-jam.firebasestorage.app",
          "VITE_FIREBASE_MESSAGING_SENDER_ID": "1090164184260",
          "VITE_FIREBASE_APP_ID": "1:1090164184260:web:024f68e5e31c4880cb2591"
        }
      }
    ]
  },
  "emulators": {
    "auth": {
      "host": "localhost",
      "port": 9099
    },
    "firestore": {
      "host": "localhost",
      "port": 8080
    },
    "hosting": {
      "host": "localhost",
      "port": 5000
    },
    "ui": {
      "enabled": true,
      "host": "localhost",
      "port": 4000
    }
  }
}


